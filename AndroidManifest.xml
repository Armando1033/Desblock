<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lukekorth.pebblelocker"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity android:name=".PebbleLocker"
            	android:icon="@drawable/ic_launcher"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".PebbleLocker$CustomDeviceAdminReceiver"
                android:label="Pebble Locker"
                android:permission="android.permission.BIND_DEVICE_ADMIN">
            <meta-data android:name="android.app.device_admin"
                       android:resource="@xml/device_admin" />
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>
        
        <receiver android:name=".PebbleConnectionReceiver">
            <intent-filter>
                <action android:name="com.getpebble.action.PEBBLE_CONNECTED" />
                <action android:name="com.getpebble.action.PEBBLE_DISCONNECTED" />
            </intent-filter>
        </receiver>
        
        <receiver android:name=".BootReceiver">
          <intent-filter>
              <action android:name="android.intent.action.BOOT_COMPLETED" />
          </intent-filter>
        </receiver>
        
        <receiver android:name=".ShutDownReceiver">
          <intent-filter>
              <action android:name="android.intent.action.ACTION_SHUTDOWN" />
          </intent-filter>
        </receiver>
        
    </application>

</manifest>
