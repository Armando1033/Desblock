<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    
    <PreferenceCategory
        android:title="@string/status">
        <com.lukekorth.pebblelocker.views.Status
            android:key="status" />
    </PreferenceCategory>
    
    <PreferenceCategory
        android:title="Device Admin" >

        <CheckBoxPreference
            android:key="key_enable_admin"
            android:title="Enable Device Admin"
            android:summary="Must be enabled for Pebble Locker to function" />
    </PreferenceCategory>
    
    <PreferenceCategory
        android:title="Options" >

        <CheckBoxPreference
            android:key="key_enable_locker"
            android:title="Enable Pebble Locker"
            android:summary="Lock or unlock your phone based on your device's connection status" />

        <EditTextPreference
            android:key="key_password"
            android:title="Pin/Password"
            android:dialogTitle="Set your pin or password" />

        <CheckBoxPreference
            android:key="key_force_lock"
            android:title="Turn off screen on disconnect"
            android:summary="Turn off the screen when your device disconnects from a trusted watch, bluetooth device or WiFi network" />

        <com.lukekorth.pebblelocker.views.GracePeriod
            android:key="key_grace_period"
            android:entries="@array/grace_period_entries"
            android:entryValues="@array/grace_period_entry_values" />
    </PreferenceCategory>
    
    <PreferenceCategory
        android:title="@string/advanced_options">

        <com.lukekorth.pebblelocker.views.PebbleWatchAppDownload
            android:key="pebble_watch_app_download" />

    	<com.lukekorth.pebblelocker.views.BluetoothPreference
    	    android:key="bluetooth_preference" />

    	<com.lukekorth.pebblelocker.views.WifiPreference
    	    android:key="wifi_preference" />
    </PreferenceCategory>
    
    <PreferenceCategory android:title="@string/help">
        <com.lukekorth.pebblelocker.views.Contact />
        <com.lukekorth.pebblelocker.views.Version />
    </PreferenceCategory>
</PreferenceScreen>