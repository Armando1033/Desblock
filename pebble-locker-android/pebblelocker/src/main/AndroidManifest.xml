<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lukekorth.pebblelocker">
    
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar">

        <meta-data android:name="AA_DB_NAME" android:value="pebble_locker.db" />
        <meta-data android:name="AA_DB_VERSION" android:value="1" />
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />
        
        <activity android:name=".PebbleLocker"
            	android:icon="@drawable/ic_launcher"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".DevicesActivity"  android:label="@string/bluetooth_devices" />
        <activity android:name=".WiFiNetworks"  android:label="@string/wifi_networks" />

        <receiver android:name=".PebbleLocker$CustomDeviceAdminReceiver"
                android:label="Pebble Locker"
                android:permission="android.permission.BIND_DEVICE_ADMIN">
            <meta-data android:name="android.app.device_admin"
                       android:resource="@xml/device_admin" />
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>
        
        <receiver android:name=".receivers.ConnectionReceiver">
            <intent-filter>
                <action android:name="com.getpebble.action.PEBBLE_CONNECTED" />
                <action android:name="com.getpebble.action.PEBBLE_DISCONNECTED" />
                
                <action android:name="android.intent.action.USER_PRESENT" />
                
                <action android:name="android.bluetooth.device.action.ACL_CONNECTED" />
        		<action android:name="android.bluetooth.device.action.ACL_DISCONNECTED" />

                <action android:name="com.lukekorth.pebblelocker.android_wear_connected" />
                <action android:name="com.lukekorth.pebblelocker.android_wear_disconnected" />

        		<action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <service android:name=".receivers.AndroidWearReceiver">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>

        <service android:name=".services.LockerService" />

        <receiver android:name=".receivers.PhoneStateReceiver">
          <intent-filter>
              <action android:name="android.intent.action.BOOT_COMPLETED" />
          </intent-filter>
        </receiver>

        <receiver android:name=".receivers.PebbleRequestReceiver">
          <intent-filter>
            <action android:name="com.getpebble.action.app.RECEIVE" />
          </intent-filter>
        </receiver>
    </application>
</manifest>
